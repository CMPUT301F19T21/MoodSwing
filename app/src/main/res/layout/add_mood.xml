<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/happymood"
                android:id="@+id/happy_button"
                android:background="@null" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/angrymood"
                android:id="@+id/angry_button"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/emotionalmood"
                android:id="@+id/emotional_button"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sadmood"
                android:background="@null"
                android:id="@+id/sad_button"/>
        </LinearLayout>

    </HorizontalScrollView>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/whenText"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:text="When:" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Click the select date" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="time" />


    <Space
        android:layout_width="1dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/reasonText"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/reasonEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/uploadPhotoTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/locationButton"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_gravity="right"
        app:srcCompat="@mipmap/ic_launcher_round" />


</LinearLayout>